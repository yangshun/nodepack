{
  "name": "nodepack",
  "version": "1.0.0",
  "private": true,
  "description": "A browser-based Node.js runtime",
  "keywords": [
    "browser",
    "education",
    "nodejs",
    "runtime",
    "webassembly"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:website": "pnpm --filter website dev",
    "build": "pnpm -r --filter './packages/*' build",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  },
  "packageManager": "pnpm@10.24.0"
}
