{
  "name": "nodepack",
  "version": "1.0.0",
  "description": "A browser-based Node.js runtime for educational purposes",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "pnpm --filter @nodepack/client dev",
    "build": "pnpm -r --filter './packages/*' build",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "example:basic": "pnpm --filter basic-poc dev"
  },
  "keywords": [
    "nodejs",
    "browser",
    "webassembly",
    "education",
    "runtime"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.33",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  }
}
